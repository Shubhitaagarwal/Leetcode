class Solution {
public:
    int romanToInt(string s) {
        int sum=0;
        int i=0;
        while(i<s.length())
        {
            switch(s[i])
            {
                case 'I':
                if(s[i+1]=='V' && i+1<s.length())
                 {
                    sum=sum+4;
                    i++;
                 }
                 else if(s[i+1]=='X' && i+1<s.length())
                 {
                    sum=sum+9;
                    i++;
                 }
                 else
                 {
                    sum=sum+1;
                 }
                 break;
                 case 'V':
                  sum=sum+5;
                  break;
                  case 'X':
                if(s[i+1]=='L' && i+1<s.length())
                 {
                    sum=sum+40;
                    i++;
                 }
                 else if(s[i+1]=='C' && i+1<s.length())
                 {
                    sum=sum+90;
                    i++;
                 }
                 else
                 {
                    sum=sum+10;
                 }
                 break;
                case 'L':
                  sum=sum+50;
                  break;
                  case 'C':
                if(s[i+1]=='D' && i+1<s.length())
                 {
                    sum=sum+400;
                    i++;
                 }
                 else if(s[i+1]=='M' && i+1<s.length())
                 {
                    sum=sum+900;
                    i++;
                 }
                 else
                 {
                    sum=sum+100;
                 }
                 break;
                 case 'D':
                  sum=sum+500;
                  break;
                  case 'M':
                  sum=sum+1000;
                  break;
            }
            i++;
        }
        return sum;
    }
};
